<h1 class="text-2xl font-bold mb-4 bg-red-600">New User---</h1>
<%= form_with model: @user, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 bg-green-500" %>
    <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>
  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700" %>
    <%= form.text_field :email, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm" %>
  </div>
  <div>
    <%= form.submit "Create User", class: "bg-blue-500 text-white px-4 py-2 rounded-md" %>
  </div>
<% end %>
<%= link_to 'Back', users_path, class: "text-blue-500 hover:underline" %>